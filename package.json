{
  "name": "vite-hyper-config",
  "version": "0.7.0",
  "packageManager": "pnpm@10.12.2",
  "description": "Use Vite to run Vite's own config.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/vite-hyper-config#readme",
  "bugs": {
    "url": "https://github.com/sxzz/vite-hyper-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/vite-hyper-config.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "tsx ./playground/index.ts",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vite": "^4.0.0 || ^5.0.0 || ^6.0.0"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "picocolors": "^1.1.1",
    "vite-node": "^3.2.4"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^7.0.4",
    "@sxzz/prettier-config": "^2.2.1",
    "@types/node": "^22.15.32",
    "bumpp": "^10.2.0",
    "eslint": "^9.29.0",
    "fast-glob": "^3.3.3",
    "prettier": "^3.6.0",
    "tsdown": "^0.12.8",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.0"
  },
  "engines": {
    "node": ">=20.18.0"
  },
  "prettier": "@sxzz/prettier-config"
