{
  "name": "vite-hyper-config",
  "version": "0.5.0",
  "packageManager": "pnpm@10.2.0",
  "description": "Use Vite to run Vite's own config.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/vite-hyper-config#readme",
  "bugs": {
    "url": "https://github.com/sxzz/vite-hyper-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/vite-hyper-config.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "tsx ./playground/index.ts",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vite": "^4.0.0 || ^5.0.0 || ^6.0.0"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "picocolors": "^1.1.1",
    "vite-node": "^3.0.5"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^5.0.1",
    "@sxzz/prettier-config": "^2.1.1",
    "@types/node": "^22.13.1",
    "bumpp": "^10.0.2",
    "eslint": "^9.19.0",
    "fast-glob": "^3.3.3",
    "prettier": "^3.4.2",
    "tsdown": "^0.5.8",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prettier": "@sxzz/prettier-config"
}
