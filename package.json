{
  "name": "vite-hyper-config",
  "version": "0.2.1",
  "packageManager": "pnpm@9.0.5",
  "description": "Use Vite to run Vite's own config.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/vite-hyper-config#readme",
  "bugs": {
    "url": "https://github.com/sxzz/vite-hyper-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/vite-hyper-config.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsup",
    "dev": "tsup --watch",
    "play": "tsx ./playground/index.ts",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vite": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "picocolors": "^1.0.0",
    "vite-node": "^2.0.2"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^3.7.6",
    "@sxzz/prettier-config": "^2.0.0",
    "@types/node": "^20.11.19",
    "bumpp": "^9.3.0",
    "eslint": "^9.7.0",
    "fast-glob": "^3.3.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prettier": "@sxzz/prettier-config"
}
