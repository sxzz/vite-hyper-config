    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "fast-glob": "^3.3.3",
    "prettier": "^3.7.4",
    "tsdown": "^0.18.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
