{
  "name": "vite-hyper-config",
  "version": "0.1.0",
  "packageManager": "pnpm@8.11.0",
  "description": "Hyper config of Vite.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/vite-hyper-config#readme",
  "bugs": {
    "url": "https://github.com/sxzz/vite-hyper-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/vite-hyper-config.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsup",
    "dev": "tsup --watch",
    "play": "tsx ./playground/index.ts",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vite": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "picocolors": "^1.0.0",
    "vite-node": "^0.34.6"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^3.7.5",
    "@sxzz/prettier-config": "^2.0.0",
    "@types/node": "^20.10.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.54.0",
    "fast-glob": "^3.3.2",
    "prettier": "^3.1.0",
    "tsup": "^8.0.1",
    "tsx": "^4.5.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prettier": "@sxzz/prettier-config"
}
